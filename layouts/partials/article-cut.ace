article.cut
  .sub.col-md-17
    {{if  isset . "image" }}
      img src="{{.image}}=w807-h454-c"
    {{else}}
      img src="{{.Params.image}}=w807-h454-c"
    {{end}}
  .incut.col-md-16
    h2
    {{if  isset . "title" }}
      {{.title}}
    {{else}}
      {{.Title}}
    {{end}}
    .description
      {{if  isset . "content" }}
        {{.content | markdownify}}
      {{else}}
        {{.Content}}
      {{end}}
